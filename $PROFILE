# Module - color for ls command
Import-Module Get-ChildItemColor -ErrorAction SilentlyContinue

# Code not working
# Remove-Item Alias:ls -ErrorAction SilentlyContinue
# function ls { Get-ChildItemColorFormatWide @args }

# custom command: clear + ls
function cl {
 
  Clear-Host
  Get-ChildItem
}

# custom command: mkdir $FILE | cd
function mkcd {
  param (
	[Parameter(Mandatory = ${true})]
	[string]${Name}
  )

  mkdir ${Name}
  cd ${Name}
}

# Color for PS C:\Users\SeeSee1> -- ORANGE --
function prompt {

  # For Status Text
  $isSuccess = $?
  $isExitError    = $LASTEXITCODE

  $esc    = [char]27
  $orange = "$esc[38;5;208m"
  $green  = "$esc[38;5;10m"
  $red    = "$esc[38;5;9m"
  $reset  = "$esc[0m"
  $path   = (Get-Location)

  # Is Status "OK"?
  $wasLastOK = $isSuccess -and (($isExitError -eq $null) -or ($isExitError -eq 0))
  
  if (!$wasLastOK) {
  	$status = "${red}LAST-CMD${reset}"
	$error = "${red}ERROR${reset}"
  } 
  else {
  	$status = "${green}Status${reset}"
	$error = "${green}OK${reset}"
  } 

  "[${status}: ${error}] ${orange}${path}>${reset} "
}

# Command to clear Screen
Clear-Host
